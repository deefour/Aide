{
    "name": "deefour/aide",
    "description": "A set of classes to assist Laravel and Silex development.",
    "version": "0.4.0",
    "license": "MIT",
    "keywords": ["deefour", "eloquent", "silex", "validation", "persistence", "laravel"],
    "authors": [
        {
            "name": "Jason Daly",
            "email": "jason@deefour.me",
            "homepage": "http://deefour.me"
        }
    ],
    "require": {
        "php": ">=5.4.0"
    },
    "support": {
        "issues": "https://github.com/deefour/Aide/issues",
        "email": "jason@deefour.me"
    },
    "require-dev": {
        "illuminate/database": "4.1.29",
        "illuminate/validation": "4.1.29",
        "illuminate/support": "4.1.29",
        "silex/silex": "~1.2",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "4.0.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Deefour\\Aide\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
          "stubs/",
          "stubs/models/",
          "stubs/policies/",
          "stubs/scopes/",
          "stubs/controllers/",
          "tests/"
        ],
        "psr-4": {
            "Deefour\\Aide\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "suggest": {
        "illuminate/database": "A primary purpose of Aide is to work with Laravel's Eloquent storage driver",
        "illuminate/validation": "Aide comes with support for Laravel's input validation"
    }
}